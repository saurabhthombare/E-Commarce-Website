@{
    ViewData["Title"] = "Login";
}


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="d-flex justify-content-center align-items-center vh-100 fixed-top">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <h3 class="text-center mb-3"> User Login</h3>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100 mt-3">Login</button>

            <div class="text-center mt-3">
                Not a member? <a asp-action="Registration" asp-controller="Register">Signup now</a>
            </div>
        </form>
    </div>
</div>



