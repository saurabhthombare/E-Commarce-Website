@model E_Commarce_Website.Models.Registration

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Registration" method="post">
    <div class="form-group">
        <label asp-for="cust_name"></label>
        <input asp-for="cust_name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_email"></label>
        <input asp-for="cust_email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_phone"></label>
        <input asp-for="cust_phone" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_Password"></label>
        <input asp-for="cust_Password" type="password" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_country"></label>
        <input asp-for="cust_country" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_city"></label>
        <input asp-for="cust_city" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_address"></label>
        <input asp-for="cust_address" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="cust_gender"></label>
        <select asp-for="cust_gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

