@model Category

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing: 4px;">Update / Edit Category</h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" value="@Model.category_id" name="category_id" />
            <input  type="text" name="category_name"class="form-control my-3"value="@Model.category_name" placeholder="Enter Category Name"/>
           
            <input type="submit" value="Update Category" class="btn btn-primary form-control my-3" />
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
